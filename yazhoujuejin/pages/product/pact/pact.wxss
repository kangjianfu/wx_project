/* pages/product/pact/pact.wxss */

.form {
  margin: 0 auto;
  font-size: 32rpx;
}

.product_name {
  font-size: 1.3rem;
  margin: 50rpx auto;
  text-align: center;
}

.danwei {
  width: 25%;
  height: 2.0rem;
  line-height: 2.0rem;
  min-height: 2.0rem;
  color: red;
  text-align: center;
}
.title{
  width: 25%;
  height: 2.0rem;
  line-height: 2.0rem;
  min-height: 2.0rem;
  text-align: right;
}
.inpt {
  border: 3rpx solid #888;
  font-size: 32rpx;
   height: 2.0rem;
  line-height: 2.0rem;
  min-height: 2.0rem;
  width: 40%;
  margin-left: 10rpx;
  border-left: 3rpx solid #888;
  padding-left:10rpx; 
}

.row {
  margin: 50rpx auto;
  width: 100%;

}
.desc_row{
   width: 92%;
   margin: 0 auto;
}
.row1{
  display: flex;
  flex-direction: row;
}
.desc {
  border-bottom: 3rpx solid #888;
  border-right: 3rpx solid #888;
  font-size: 32rpx;
  width: 100%;
}

.btn_view {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.btn {
  background-color: #ffce00;
  border-radius: 0;
  color: white;
}

.btn_hover {
  background-color: #f29f3f;
}

.hr {
  height: 5rpx;
  margin: 20rpx 0;
  border-bottom: 1px gainsboro dashed;
}
