/* pages/home/home.wxss */
.content{
    height: 100%;
    font-family: 黑体,宋体;
    font-size: 14px;
}

.swp{
    height: 400rpx;
}

swiper-item image{
    width: 100%;
    height: 100%
}
.selection{
    margin-top: 50rpx;
    display: flex;
    flex-flow: row;
    width: 100%;
   
}
.selection >view{
    display: flex;
    flex-flow: column;
    width: 33.3%;
    text-align: center;
    margin: auto;
}
.selection view image{
    height:100rpx;width:100rpx;margin:auto;
}
.selection view text{
    margin-top: 30rpx;
}
.hr{
    height: 5rpx;
    margin: 30rpx 0;
    border-bottom: 1px dashed gainsboro;
}

.qjcp{
    line-height: 42rpx;
    width: 90%;
    margin: 1rpx auto;
    margin-top: 40rpx;
    margin-bottom: 20rpx
}
.title{
    display: flex;
    flex-flow: row;
    margin: 20rpx auto;
}
.title text{
    margin-left: 10rpx;
}
.title  image {
    height: 42rpx;
    width: 42rpx;
}

.name{
    margin: 30rpx auto;
    font-size: 18px;
}

.detail{
    width: 90%;
    margin: 20rpx auto
}

.row{
    display: flex;
    flex-flow: row;
    margin: 30rpx auto;
}
.row >view{
    width: 50%;
}
.th{
    font-size: 26rpx;
}
.number{
    font-size: 34rpx;
    color: darkorange;
}
.small_gray_line{
    height:1rpx;
    border-bottom:1rpx solid #ccc
}